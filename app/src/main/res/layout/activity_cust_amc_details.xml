<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CustAmcDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/llPdf"
        android:background="@color/white"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@color/dusk_yellow">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="@color/dusk_yellow"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Customer Details">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/logo_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo2"/>
                    <TextView
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/logo_btn"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Details"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/pdfImage"
                        android:visibility="gone"
                        android:layout_width="30dp"
                        android:onClick="generatePdf"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="70dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_picture_as_pdf_black_24dp"
                        android:layout_marginLeft="20dp"/>

                    <ImageView
                        android:id="@+id/popupWindow"
                        android:layout_width="30dp"
                        android:visibility="gone"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:onClick="amcRenewAdd"
                        android:tint="@color/white"
                        android:src="@drawable/popup_window" />

                    <TextView
                        android:id="@+id/amcReAdd"
                        android:visibility="gone"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:onClick="amcRenewAdd"
                        android:textColor="@color/appPrimaryColor"
                        android:background="@drawable/btn_click_effect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:text="Add AMC"
                        />

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/root_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Customer Details"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            style="@style/row_new_task_linear_layout1"
                            android:padding="0dp">
                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/user"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="NAME"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/cust_name_txt"
                                    android:layout_marginLeft="50dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/small_email"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="EMAIL ID"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/cust_email_txt"
                                    android:layout_marginLeft="30dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/phone"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="MOBILE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/cust_mobile_txt"
                                    android:layout_marginLeft="40dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/address"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="ADDRESS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/cust_address_txt"
                                    android:layout_marginLeft="30dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/service_no"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="SERVICE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                                <TextView
                                    android:id="@+id/service_amc_txt"
                                    android:layout_marginLeft="35dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/status_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:text="Service Details"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            style="@style/row_new_task_linear_layout1"
                            android:padding="0dp">


                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/service_no"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="SERVICE CALL NO."
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />

                                <TextView
                                    android:id="@+id/service_call_txt"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/calendar"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="SERVICE DATE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/service_date_txt"
                                    android:layout_marginLeft="45dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/calendar"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="SERVICE TIME"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/service_time_txt"
                                    android:layout_marginLeft="45dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">
                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/status"/>
                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:text="SERVICE DETAILS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
                                    android:id="@+id/service_detail_txt"
                                    android:layout_marginLeft="27dp"
                                    android:textColor="@color/black"
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <Switch
                        android:id="@+id/switch1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spare Details:"
                        android:textColor="@color/black"
                        android:theme="@style/SCBSwitch"
                        android:checked="true"
                        android:textOff="OFF"
                        android:textOn="ON" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/product_list"
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/amcdetails"
                            android:background="@color/tab_indicator_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="2dp"
                                android:background="#c0c0c0"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="240dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:padding="5dp"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="5dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Model Name : "
                                            android:textStyle="bold"
                                            android:textSize="15sp"
                                            android:textColor="@color/black"/>
                                        <TextView
                                            android:id="@+id/model_name"
                                            android:layout_width="240dp"
                                            android:layout_height="wrap_content"
                                            android:textColor="@android:color/black"
                                            android:textSize="15sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:padding="5dp"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="5dp">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="R.O "
                                                android:textStyle="bold"
                                                android:textSize="15sp"
                                                android:textColor="@color/black"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/and"
                                                android:textStyle="bold"
                                                android:textSize="15sp"
                                                android:textColor="@color/black"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text=" U.V : "
                                                android:textStyle="bold"
                                                android:textSize="15sp"
                                                android:textColor="@color/black"/>
                                        </LinearLayout>

                                        <TextView
                                            android:layout_gravity="center_vertical"
                                            android:id="@+id/rouv_name"
                                            android:layout_width="240dp"
                                            android:layout_height="wrap_content"
                                            android:textColor="@android:color/black"
                                            android:textSize="15sp" />

                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:id="@+id/viewBB"
                                    android:visibility="gone"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="#8d8787"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/totCalDe"
                                    android:visibility="gone"
                                    android:orientation="vertical"
                                    android:layout_marginTop="5dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:text="Total Amount :" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/black"
                                            android:textSize="13sp"
                                            android:textStyle="bold"
                                            android:text="Rs. " />
                                        />

                                        <TextView
                                            android:id="@+id/total_amount_collection"
                                            android:layout_width="wrap_content"
                                            android:text="0"
                                            android:textSize="13sp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="2dp"
                                            android:textStyle="bold"
                                            android:textColor="@color/black" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_margin="5dp"
                                android:id="@+id/oneLay"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/oneTime"
                                    android:textColor="@color/dark_gray"
                                    android:layout_width="wrap_content"
                                    android:background="@drawable/btn_click_effect"                                android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:text="One Time  "
                                    android:clickable="false"
                                    android:padding="5dp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal"/>
                                <CheckBox
                                    android:id="@+id/amcDetial"
                                    android:background="@drawable/btn_click_effect"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="@color/dark_gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AMC             "
                                    android:clickable="false"
                                    android:textStyle="bold"
                                    android:padding="5dp"
                                    android:layout_gravity="center_horizontal"/>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/amcCard"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sheduYleTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AMC Schedule : "
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/service_list_recycle"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:id="@+id/cardComm"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="5dp"
                            android:visibility="visible"
                            android:id="@+id/com_layout">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:layout_marginTop="7dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/comments" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:textSize="15sp"
                                    android:text="Comments :" />
                                />
                            </LinearLayout>


                            <EditText
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/comment_txt"
                                android:layout_marginTop="5dp"
                                android:minLines="2"
                                android:background="@drawable/comment_border"
                                android:maxLines="5"
                                android:textColorHint="@color/black"
                                android:gravity="start"
                                android:layout_gravity="center"
                                android:hint="Comment"
                                android:textAlignment="textStart"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_marginTop="7dp"
                            android:layout_height="2dp"
                            android:background="#c0c0c0"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/date_layout"
                                style="@style/row_new_task_linear_layout2">

                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:src="@drawable/calendar" />

                                <EditText
                                    android:id="@+id/service_update_date_txt"
                                    android:focusableInTouchMode="false"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:paddingRight="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:hint="Service Date"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="14dp"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <LinearLayout
                                style="@style/row_new_task_linear_layout2">

                                <ImageView
                                    android:layout_width="@dimen/small_icon_width"
                                    android:layout_height="@dimen/small_icon_width"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/calendar" />

                                <EditText
                                    android:id="@+id/service_update_time_txt"
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:inputType="text"
                                    android:hint="Service Time"
                                    android:layout_marginLeft="5dp"
                                    android:focusableInTouchMode="false"
                                    android:clickable="true"
                                    android:editable="false"
                                    android:textSize="14dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cuatSignCart"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Sign : "
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:id="@+id/custSignImg"
                            android:layout_height="100dp"/>

                    </LinearLayout>

