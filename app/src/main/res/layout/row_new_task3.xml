<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    style="@style/row_new_task_linear_layout1"
                    android:padding="0dp">

                    <LinearLayout style="@style/row_new_task_linear_layout2">

                        <ImageView
                            android:layout_width="@dimen/small_icon_width"
                            android:layout_height="@dimen/small_icon_width"
                            android:src="@drawable/model_img" />

                        <TextView
                            android:id="@+id/service_call_no_txt"
                            style="@style/row_new_task_txt"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>


                    <LinearLayout style="@style/row_new_task_linear_layout2">

                        <ImageView
                            android:layout_width="@dimen/small_icon_width"
                            android:layout_height="@dimen/small_icon_width"
                            android:src="@drawable/user"/>

                        <TextView
                            android:id="@+id/name_txt"
                            style="@style/row_new_task_txt"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout style="@style/row_new_task_linear_layout2">

                        <ImageView
                            android:layout_width="@dimen/small_icon_width"
                            android:layout_height="@dimen/small_icon_width"
                            android:src="@drawable/small_email" />

                        <TextView
                            android:id="@+id/email_txt"
                            style="@style/row_new_task_txt"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    style="@style/row_new_task_linear_layout1"
                    android:padding="0dp">

                    <LinearLayout
                        style="@style/row_new_task_linear_layout2"
                        >

                        <ImageView
                            android:layout_width="@dimen/small_icon_width"
                            android:layout_height="wrap_content"
                            android:src="@drawable/address" />

                        <TextView
                            android:id="@+id/address_txt"
                            style="@style/row_new_task_txt"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phone_layout"
                        style="@style/row_new_task_linear_layout2">

                        <ImageView
                            android:layout_width="@dimen/small_icon_width"
                            android:layout_height="@dimen/small_icon_width"
                            android:src="@drawable/phone" />

                        <TextView
                            android:id="@+id/phone_txt"
                            style="@style/row_new_task_txt"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/row_new_task_linear_layout2">

                        <ImageView
                            android:layout_width="@dimen/small_icon_width"
                            android:layout_height="@dimen/small_icon_width"
                            android:src="@drawable/service_no" />

                        <TextView
                            android:id="@+id/dateTime_txt"
                            style="@style/row_new_task_txt"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/option_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="@dimen/small_icon_width"
                        android:layout_height="@dimen/small_icon_width"
                        android:src="@drawable/next_arrow" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/status_layout"
                style="@style/row_new_task_linear_layout2"
                android:layout_width="match_parent"
                android:gravity="end">

                <TextView
                    android:id="@+id/status_txt"
                    android:visibility="gone"
                    style="@style/row_new_task_txt"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="@dimen/small_icon_width"
                    android:layout_height="@dimen/small_icon_width"
                    android:src="@drawable/status" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
