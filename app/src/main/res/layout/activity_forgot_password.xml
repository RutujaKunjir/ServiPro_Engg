<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ForgotPassword">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:title="FORGOT PASSWORD"
        app:titleTextColor="@color/white"
        android:background="@color/dusk_yellow"
        >
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgicon"
                    android:layout_width="220dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/forgot_pass"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Let us know your registered email address and we'll send you password reset instruction"
                    android:textSize="14dp"
                    android:textColor="@color/dusk_yellow"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <EditText
            android:id="@+id/emailAddress"
            android:layout_marginLeft="10dp"
            android:layout_width="300dp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/email"
            android:layout_marginTop="30dp"
            android:drawablePadding="20dp"
            android:textSize="16dp"
            android:hint="Email Address"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/resiterBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/dusk_yellow"
            android:layout_margin="15dp"
            android:onClick="checkPassword"
            android:text="Submit"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>


</RelativeLayout>