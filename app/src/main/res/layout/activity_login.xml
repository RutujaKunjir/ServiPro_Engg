<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/service_pro_bg"
    tools:context=".Activity.Login">

    <Button
        android:layout_width="15dp"
        android:layout_height="60dp"
        android:background="@drawable/button"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:src="@drawable/company_logo"
            android:id="@+id/logo"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="140dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="SERVI-PRO"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Engineer"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/card_1"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp"
            app:contentPadding="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN IN"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/usericon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:padding="0dp"
                        android:src="@drawable/username" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_email1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/usericon">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:paddingLeft="5dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/userpass"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/input_email1"
                        android:layout_marginTop="30dp"
                        android:padding="0dp"
                        android:src="@drawable/password" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/input_email1"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@id/userpass"
                        android:paddingLeft="10dp"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/input_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:paddingLeft="5dp"
                            android:inputType="textPassword"
                            android:textColorHint="@color/white" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="forgot password?"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:onClick="forgotPassword"
                    android:textColor="@color/red"
                    android:textSize="15sp"/>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="200dp"
                    android:onClick="onLogin"
                    android:layout_height="wrap_content"
                    android:background="@color/dusk_yellow"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"
                    android:text="Login"
                    android:textColor="@color/white" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>